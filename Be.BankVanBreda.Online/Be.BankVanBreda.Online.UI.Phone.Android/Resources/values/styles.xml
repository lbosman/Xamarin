<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <style name="BVBRTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
    <item name="android:actionBarStyle">@style/BVBRTheme.ActionBarStyle</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:windowBackground">@android:color/white</item>
    <item name="android:actionMenuTextColor">@drawable/menu_fg</item>

  </style>

  <style name="BVBRTheme.ActionBarStyle" parent="@android:style/Widget.Holo.ActionBar">
    <item name="android:background">#1D386D</item>   
    <item name="android:titleTextStyle">@style/BVBRThemeActionBarTitleTextStyle</item>
  </style>

  <style name="BVBRThemeActionBarTitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
    <item name="android:textColor">#FFFFFF</item>
  </style>

  <style name="Theme.Splash" parent="android:Theme">
    <item name="android:windowBackground">@drawable/splash</item>
    <item name="android:windowNoTitle">true</item>
  </style>
</resources>